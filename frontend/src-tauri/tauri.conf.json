{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PI-Installer",
  "version": "1.3.4",
  "identifier": "de.pi-installer.app",
  "build": {
    "beforeDevCommand": "npm run dev:tauri",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "VITE_API_BASE=http://127.0.0.1:8000 npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "PI-Installer",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Raspberry Pi Installer – Desktop-Oberfläche",
    "longDescription": "PI-Installer als eigenständige Desktop-Anwendung. Verbindet sich mit dem Backend (Standard: http://localhost:8000).",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
